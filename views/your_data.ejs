<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="style.css" />
    <title>Your Data</title>
    <link rel="shortcut icon" type="image/png" href="images/Overstat Logo.png">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@4.4.0/font/bootstrap-icons.css">
  </head>

  <body>
    <header>
      <nav>
        <div class="left">
          <ul>
            <li><a class="logo" href="/">Over-Stat</a></li>
            <li><a href="/">Home</a></li>
            <li><a href="enter_data">Enter Data</a></li>
            <li><a href="your_data">Your Data</a></li>
            <li><a href="about">About</a></li>
          </ul>
        </div>
        <div class="login right">
          <ul>
            <% if (typeof currentUser !== 'undefined' && currentUser !== null) { %>
              <div class="dropdown">
                <a class="dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-bs-toggle="dropdown" aria-expanded="false">
                  <li><a class="username"><%= currentUser.username %></a></li>
                </a>
                <ul class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                  <li><a class="dropdown-item" href="/signout">Sign out</a></li>
                </ul>
              </div>
            <% } else { %>
              <a href="/login">Login</a>
              <% if(typeof currentUser !== 'undefined'){currentUser = null;}%>

            <% } %>
            
          </ul>
        </div>
      </nav>
    </header>

    <div class="slideshow-container">
        <a class="prev" onclick="plusSlides(-1)">❮</a>
        <div class="mySlides fade" id="tankslide">
          <div class="slide-info tankslide">
            <img src="icons/tank.png" alt="Tank Icon">
            <h3>1: 2:00pm</h3>
            <h3>2: 3:00pm</h3>
            <h3>3: 5:00am</h3>
          </div>
          
        </div>
        
        <div class="mySlides fade" id="dmgslide">
            <div class="slide-info">
                <img src="icons/OffenseIcon.webp" alt="Damage Icon">
                <h3>1: 2:00pm</h3>
                <h3>2: 3:00pm</h3>
                <h3>3: 5:00am</h3>
            </div>
          
        </div>
        
        <div class="mySlides fade"  id="suppslide">
            <div class="slide-info">
                <img src="icons/SupportIcon.webp" alt="Tank Icon">
                <h3>1: 2:00pm</h3>
                <h3>2: 3:00pm</h3>
                <h3>3: 5:00am</h3>
            </div>
         
        </div>
        
        
        <a class="next" onclick="plusSlides(1)">❯</a>
        
        </div>
    </div>

    <div class="index-section">
      <h1></h1>
      <h2><%= currentUser.username %>'s Optimal Play Times:</h2>
      <div class="show-data">
        <div>
          <img src="icons/tank.png" alt="Tank logo" />
          <h3>1:00pm</h3>
        </div>
        <div>
          <img src="icons/OffenseIcon.webp" alt="Damage logo" />
          <h3>1:00pm</h3>
        </div>
        <div>
          <img src="icons/SupportIcon.webp" alt="Support logo" />
          <h3>1:00pm</h3>
        </div>
      </div>
    </div>

    <footer>
      <div class="left">
        <ul>
          <li><a class="logo" href="/">Over-Stat</a></li>
          <li><a href="enter_data">Enter Data</a></li>
          <li><a href="your_data">Your Data</a></li>
          <li><a href="about">About</a></li>
          </ul>
    </div>
    <div class="right">
      <ul>
        <li">Copywrite</li>
      </ul>
    </div>
    </footer>
    
    <script src="script.js"></script>
  </body>
</html>
